version:#version 330 core
vertex [
	$version
	layout (location = 0) in vec4 position;

	uniform mat4 world;
	uniform mat4 projection;

	void main()
	{
		gl_Position =  position * world * projection;
	}
];

fragment [
	$version
	layout(location = 0) out vec4 color;

	uniform vec4 gizmoColor;

	void main()
	{
		color = gizmoColor;
	}
];